<script src="//connect.soundcloud.com/sdk.js"></script>
<script type="text/javascript" src="js/underscore.js"></script>
<script type="text/javascript" src="js/backbone.js"></script>
<script type="text/javascript" src="js/waveform.js"></script>
<script type="text/javascript" src="js/Track.js"></script>

<script type="text/template" id="track_template">
	<div id="track-<%= track_id %>">
		<div class="title">
			<%= creator %> - <%= title %>
		</div>
		<div class="fav">
			♥ <a href="<%= faved_by_profile %>" target="_blank"><%= faved_by %></a>
		</div>
		<div class="waveform">
			
		</div>
		<div class="avatar">
			<a href="<%= creator_profile %>" target="_blank">
				<img src="<%= creator_avatar %>" alt="Avatar">
			</a>
		</div>
	</div>
</script>

<script type="text/javascript" src="js/TrackView.js"></script>
<script type="text/javascript" src="js/Playlist.js"></script>
<script type="text/javascript" src="js/PlaylistView.js"></script>
<script type="text/javascript" src="js/streaming.js"></script>

<div class="row-fluid">
	<div class="span12">
		<div class="page-header">
			<h1>Your playlist</h1>
		</div>
		<img id="playing-indicator" src="img/logo-small.png" />
		<div id="playlist">
			<!-- invisible control buttons -->
			<div>
				<div data-role="prev"></div>
				<div data-role="play"></div>
				<div data-role="next"></div>
			</div>
		</div>
		<div id="more">
			<div id="arrow">
				↓
			</div>
		</div>
	</div>
</div>