<script src="//connect.soundcloud.com/sdk.js"></script>
<script type="text/javascript" src="js/underscore.js"></script>
<script type="text/javascript" src="js/backbone.js"></script>
<script type="text/javascript" src="js/waveform.js"></script>
<script type="text/javascript" src="js/Track.js"></script>

<script type="text/template" id="track_template">
	<div id="track-<%= id %>" class="track">
		<a href="<%= user.permalink_url %>">
			<img src="<%= user.avatar_url %>" class="avatar" alt="avatar" />
		</a>
		<div class="track-row">
			<div class="track-title-row">
				<a href="<%= permalink_url %>">
					<span class="track-title"><%= user.username %> - <%= title %></span>
				</a>
			</div>
			<div class="track-stream-row">
			    <div class="waveform"></div>
		    </div>
		</div>
    </div>
</script>

<script type="text/javascript" src="js/TrackView.js"></script>
<script type="text/javascript" src="js/BBPlaylist.js"></script>
<script type="text/javascript" src="js/PlaylistView.js"></script>
<script type="text/javascript" src="js/streaming.js"></script>


<div class="page-header">
	<h1>Your playlist</h1>
</div>
<div id="playlist">
	<div id="playlist-controls">
		<img class="prev-button" data-role="prev" src="img/previous.png" />
		<img class="play-button" data-role="play" src="img/pause.png" />
		<img class="next-button" data-role="next" src="img/next.png" />
	</div>
</div>
